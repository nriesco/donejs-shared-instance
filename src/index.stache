<html>
  <head>
    <title>{{title}}</title>
  </head>
  <body>
    <can-import from="donejs-shared-instance/styles.less" />
    <can-import from="donejs-shared-instance/app" export-as="viewModel" />
    <can-import from="~/info/" />
    <can-import from="~/home.component" />

    <h1>{{message}}</h1>
    Links: <a href="/home">Home</a> :: <a href="/info">Info</a><br>
    <br>

    {{#switch page}}
      {{#case 'home'}}
        <demo-home />
      {{/case}}
      {{#case 'info'}}
        <demo-info />
      {{/case}}
        
    {{/switch}}

    {{#switch env.NODE_ENV}}
      {{#case "production"}}
        <script src="{{joinBase 'steal.production.js'}}"></script>
      {{/case}}
      {{#default}}
        <script src="/node_modules/steal/steal.js"></script>
      {{/default}}
    {{/switch}}
  </body>
</html>
